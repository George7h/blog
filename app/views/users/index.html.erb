<div id="user_gap">
  <% @users.each do |user| %>
    <li id="user_container">
      <%= link_to user_url(user) do %>
        <%= image_tag(user.photo.presence || 'face.svg', id: "user_photo") %><br>
        <div id="user_text">
          <h2><%= user.name %></h2><br>
          <p>Number of posts: <%= user.posts.count %></p>
        </div>
      <% end %>
    </li>
  <% end %>
</div>